<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
 <!--   <ListView
        android:id="@id/android:list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    </ListView>-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/darkslateblue"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/bar"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/text_toney"
            android:layout_below="@id/bar"
            android:paddingLeft="@dimen/activity_horizontal_margin"

            android:text="Toney BLE"
            android:textSize="35sp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search_butt"
            android:layout_below="@id/text_toney"
            android:layout_alignRight="@id/text_toney"

            android:background="@drawable/search_32"

            >

        </Button>

    </RelativeLayout>


   <!-- android:drawableBottom="@mipmap/splash"-->

</RelativeLayout>
